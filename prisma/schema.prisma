generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  wraps         Wrap[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

model Wrap {
  id            String      @id @default(cuid())
  userId        String
  title         String
  nickname      String?
  theme         String
  privacy       String       // open / invite-only
  allowAnon     Boolean      @default(true)
  linkSlug      String       @unique
  prompts       Prompt[]
  responses     Response[]
  secrets       SecretMessage[]
  
  // AI Generated Fields
  vibeScore     Int?
  vibeSummary   String?      @db.Text
  archetype     String?
  keywords      Json?        // Store top keywords as array
  
  createdAt     DateTime     @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Prompt {
  id        String   @id @default(cuid())
  wrapId    String
  question  String
  order     Int
  wrap      Wrap     @relation(fields: [wrapId], references: [id], onDelete: Cascade)
}

model Response {
  id          String   @id @default(cuid())
  wrapId      String
  name        String?
  isAnonymous Boolean
  answers     Json
  photoUrl    String?
  moodTag     String?
  createdAt   DateTime @default(now())

  wrap Wrap @relation(fields: [wrapId], references: [id], onDelete: Cascade)
}

model SecretMessage {
  id          String   @id @default(cuid())
  wrapId      String
  senderName  String?
  isAnonymous Boolean
  content     String
  mediaUrl    String?
  unlockDate  DateTime
  createdAt   DateTime @default(now())

  wrap Wrap @relation(fields: [wrapId], references: [id], onDelete: Cascade)
}
